<Window x:Class="MonitorRefreshRateSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorRefreshRateSwitcher"
        mc:Ignorable="d"
        Title="Переключатель частоты обновления монитора" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Текущие настройки" Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Выберите частоту обновления:" 
                           Margin="0,0,0,8"
                           FontSize="14"/>
                <ComboBox x:Name="RefreshRatesComboBox" 
                          Margin="0,0,0,15"
                          SelectionChanged="RefreshRatesComboBox_SelectionChanged"/>
                <TextBlock x:Name="StatusTextBlock" 
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"
                           Foreground="#666666"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Горячие клавиши" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Настроенные горячие клавиши:" 
                           Margin="0,0,0,10"
                           FontSize="14"/>
                
                <ListView x:Name="HotkeyListView" 
                          Grid.Row="1" 
                          Margin="0,0,0,15"
                          BorderThickness="1"
                          BorderBrush="#DDDDDD">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Клавиши" Width="250">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Частота" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Действия" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Изменить" 
                                                    Click="EditHotkey_Click"
                                                    Margin="0,0,5,0"
                                                    Background="#4CAF50"/>
                                            <Button Content="Удалить" 
                                                    Click="RemoveHotkey_Click"
                                                    Background="#F44336"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Grid.Row="2" 
                        Content="Добавить новую комбинацию" 
                        Click="AddHotkey_Click" 
                        HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Настройки приложения" Grid.Row="2">
            <StackPanel>
                <CheckBox x:Name="MinimizeToTrayCheckBox" 
                          Content="Сворачивать в трей" 
                          Checked="Settings_Changed" 
                          Unchecked="Settings_Changed"/>
                <CheckBox x:Name="StartMinimizedCheckBox" 
                          Content="Запускать свёрнутым" 
                          Checked="Settings_Changed" 
                          Unchecked="Settings_Changed"/>
                <CheckBox x:Name="StartWithWindowsCheckBox" 
                          Content="Запускать вместе с Windows" 
                          Checked="Settings_Changed" 
                          Unchecked="Settings_Changed"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
