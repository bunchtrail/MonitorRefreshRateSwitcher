<Window x:Class="MonitorRefreshRateSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorRefreshRateSwitcher"
        mc:Ignorable="d"
        Title="Переключатель частоты обновления монитора" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Текущие настройки" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="Выберите частоту обновления:" Margin="0,0,0,5"/>
                <ComboBox x:Name="RefreshRatesComboBox" 
                          Margin="0,0,0,10"
                          SelectionChanged="RefreshRatesComboBox_SelectionChanged"/>
                <TextBlock x:Name="StatusTextBlock" 
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Горячие клавиши" Grid.Row="1" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Настроенные горячие клавиши:" Margin="0,0,0,5"/>
                
                <ListView x:Name="HotkeyListView" Grid.Row="1" Margin="0,0,0,10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Клавиши" Width="200"/>
                            <GridViewColumn Header="Частота" Width="100"/>
                            <GridViewColumn Header="Действия" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="Добавить" Click="AddHotkey_Click" Width="100" Margin="0,0,5,0"/>
                    <Button Content="Удалить" Click="RemoveHotkey_Click" Width="100"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="Настройки приложения" Grid.Row="2">
            <StackPanel Margin="5">
                <CheckBox x:Name="MinimizeToTrayCheckBox" Content="Сворачивать в трей" 
                          Margin="0,0,0,5" Checked="Settings_Changed" Unchecked="Settings_Changed"/>
                <CheckBox x:Name="StartMinimizedCheckBox" Content="Запускать свёрнутым" 
                          Margin="0,0,0,5" Checked="Settings_Changed" Unchecked="Settings_Changed"/>
                <CheckBox x:Name="StartWithWindowsCheckBox" Content="Запускать вместе с Windows" 
                          Margin="0,0,0,5" Checked="Settings_Changed" Unchecked="Settings_Changed"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
